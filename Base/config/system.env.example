# Core
BASE_DEVICE_ID=BASE-PI4-01
BASE_UPDATE_HZ=5
BASE_LOG_LEVEL=INFO
BASE_LOG_PATH=logs/rtk-base.log

# Corrections
BASE_CORR_MODE=serial
BASE_CORR_PORT=/dev/ttyACM0
BASE_CORR_BAUD=115200
