BASE_LORA_UART_HAT_PERSIST=true
BASE_LORA_SPI_BUS_ID=0
BASE_LORA_SPI_CS_ID=0
BASE_LORA_RESET_PIN=18
BASE_LORA_BUSY_PIN=20
BASE_LORA_IRQ_PIN=16
BASE_LORA_TXEN_PIN=6
