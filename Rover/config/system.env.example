# Core
ROVER_DEVICE_ID=ROVER-PI4-01
ROVER_UPDATE_HZ=5
ROVER_LOG_LEVEL=INFO
ROVER_LOG_PATH=logs/rtk-rover.log

# GNSS
ROVER_GNSS_ENABLED=true
ROVER_GNSS_SIMULATE=false
ROVER_GNSS_PORT=/dev/ttyACM0
ROVER_GNSS_BAUD=115200

# LoRa (rover side, expects RTCM bytes from base station radio link)
ROVER_LORA_ENABLED=true
ROVER_LORA_TRANSPORT=serial
ROVER_LORA_PORT=/dev/ttyS0
ROVER_LORA_BAUD=9600
ROVER_LORA_FREQ_MHZ=913.0
ROVER_LORA_UART_HAT_AUTO_CONFIG=true
ROVER_LORA_UART_HAT_M0_PIN=22
ROVER_LORA_UART_HAT_M1_PIN=27
ROVER_LORA_UART_HAT_ADDRESS=65535
ROVER_LORA_UART_HAT_AIR_SPEED=2400
ROVER_LORA_UART_HAT_BUFFER_SIZE=240
ROVER_LORA_UART_HAT_PERSIST=true
ROVER_LORA_SPI_BUS_ID=0
ROVER_LORA_SPI_CS_ID=0
ROVER_LORA_RESET_PIN=18
ROVER_LORA_BUSY_PIN=20
ROVER_LORA_IRQ_PIN=16
ROVER_LORA_TXEN_PIN=6
ROVER_LORA_RXEN_PIN=-1

# Bluetooth broadcast to mobile app
ROVER_BT_ENABLED=true
ROVER_BT_NAME=RTK-Rover
ROVER_BT_UUID=00001101-0000-1000-8000-00805F9B34FB
ROVER_BT_CHANNEL=4
ROVER_BT_HZ=4

# OLED
ROVER_OLED_ENABLED=false
ROVER_OLED_ADDR=60
ROVER_OLED_LOGO=assets/logo.png
